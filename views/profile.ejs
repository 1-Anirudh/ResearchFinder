          <!-- Skills Container -->
      <div class="interests-container">
        <h2>Skills</h2>
        <div class="input-field">
          <textarea placeholder="Enter your new skill"></textarea>
          <i class="uil uil-notes note-icon"></i>
        </div>
    
        <ul class="todoLists skills-list"></ul>
    
        <div class="pending-tasks">
