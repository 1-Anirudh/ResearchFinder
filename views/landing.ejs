    function loadOpportunities(){
      let containers = document.querySelector('.containers');
      containers.innerHTML = '';
      const keys = Object.keys(window.opportunityData);
      keys.forEach(key => {
        const opportunity = window.opportunityData[key];
        let container = document.createElement('div');
        container.classList.add('container');
        container.innerHTML = `
          <div class="product">
            <p class="product-p" name="topic">${opportunity.topic}</p>
            <h2 class="product-h1" name="title">${opportunity.title}</h2>
